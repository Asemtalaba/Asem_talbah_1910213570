Topic: Sparse Matrix Conversion
*/

int main() {
    int matrix[4][4] = {
        {0, 0, 3, 0},
        {22, 0, 0, 0},
        {0, 0, 0, 7},
        {0, 5, 0, 0}
    };

    int rows = 4, cols = 4;
    int count = 0;

    // Count non-zero elements
    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < cols; j++) {
            if (matrix[i][j] != 0)
                count++;
        }
    }

    // Sparse Matrix representation: (row, col, value)
    int sparse[count][3];
    int k = 0;

    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < cols; j++) {
            if (matrix[i][j] != 0) {
                sparse[k][0] = i;
                sparse[k][1] = j;
                sparse[k][2] = matrix[i][j];
                k++;
            }
        }
    }

    printf("Sparse Matrix Representation:\n");
    printf("Row  Col  Value\n");

    for (int i = 0; i < count; i++) {
        printf("%d    %d    %d\n",
               sparse[i][0],
               sparse[i][1],
               sparse[i][2]);
    }

    return 0;
}
