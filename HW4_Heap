Topic: Max Heap and Min Heap using Array
*/

#define MAX 100

// ---------- MAX HEAP ----------
void maxHeapify(int heap[], int size, int i) {
    int largest = i;
    int left = 2 * i + 1;
    int right = 2 * i + 2;

    if (left < size && heap[left] > heap[largest])
        largest = left;

    if (right < size && heap[right] > heap[largest])
        largest = right;

    if (largest != i) {
        int temp = heap[i];
        heap[i] = heap[largest];
        heap[largest] = temp;
        maxHeapify(heap, size, largest);
    }
}

void insertMaxHeap(int heap[], int* size, int value) {
    int i = (*size)++;
    heap[i] = value;

    while (i != 0 && heap[(i - 1) / 2] < heap[i]) {
        int temp = heap[i];
        heap[i] = heap[(i - 1) / 2];
        heap[(i - 1) / 2] = temp;
        i = (i - 1) / 2;
    }
}

// ---------- MIN HEAP ----------
void minHeapify(int heap[], int size, int i) {
    int smallest = i;
    int left = 2 * i + 1;
    int right = 2 * i + 2;

    if (left < size && heap[left] < heap[smallest])
        smallest = left;

    if (right < size && heap[right] < heap[smallest])
        smallest = right;

    if (smallest != i) {
        int temp = heap[i];
        heap[i] = heap[smallest];
        heap[smallest] = temp;
        minHeapify(heap, size, smallest);
    }
}

void insertMinHeap(int heap[], int* size, int value) {
    int i = (*size)++;
    heap[i] = value;

    while (i != 0 && heap[(i - 1) / 2] > heap[i]) {
        int temp = heap[i];
        heap[i] = heap[(i - 1) / 2];
        heap[(i - 1) / 2] = temp;
        i = (i - 1) / 2;
    }
}

// ---------- PRINT ----------
void printHeap(int heap[], int size) {
    for (int i = 0; i < size; i++)
        printf("%d ", heap[i]);
    printf("\n");
}

// ---------- MAIN ----------
int main() {
    int maxHeap[MAX], minHeap[MAX];
    int maxSize = 0, minSize = 0;

    // Insert values
    insertMaxHeap(maxHeap, &maxSize, 10);
    insertMaxHeap(maxHeap, &maxSize, 40);
    insertMaxHeap(maxHeap, &maxSize, 30);
    insertMaxHeap(maxHeap, &maxSize, 5);

    insertMinHeap(minHeap, &minSize, 10);
    insertMinHeap(minHeap, &minSize, 40);
    insertMinHeap(minHeap, &minSize, 30);
    insertMinHeap(minHeap, &minSize, 5);

    printf("Max Heap: ");
    printHeap(maxHeap, maxSize);

    printf("Min Heap: ");
    printHeap(minHeap, minSize);

    return 0;
}
